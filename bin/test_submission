#!/usr/bin/env python
import sys
from rampwf.utils.testing import assert_submission  # noqa

ramp_kit_dir = './'
ramp_data_dir = './'
submission_name = 'starting_kit'
for arg in sys.argv[1:]:
    tokens = arg.split('=')
    if tokens[0] == 'ramp_kit_dir':
        ramp_kit_dir = tokens[1]
    elif tokens[0] == 'submission_name':
        submission_name = tokens[1]
    elif tokens[0] == 'ramp_data_dir':
        ramp_data_dir = tokens[1]
    else:
        print('Unknown argument {}'.format(tokens[0]))
        exit(0)

assert_submission(ramp_kit_dir=ramp_kit_dir, ramp_data_dir=ramp_data_dir,
                  submission_name=submission_name)
